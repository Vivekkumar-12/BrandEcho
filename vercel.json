{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "image.png",
      "use": "@vercel/static"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "chatbot.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/analyze(.*)", "dest": "api/index.py" },
    { "src": "/usage-stats(.*)", "dest": "api/index.py" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
